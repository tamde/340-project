</div>
    <br>
    <br>
    <h2>
      Library Table
    </h2>
    <div>
<table>
    <thead>
    <th>Customer</th>
    <th>Game Owned</th>
  </thead>
    <tbody>
        {{#each Library}}
        <tr>
            <td>{{fullname}}</td>
            <td>{{gameName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
  <h3>Add Game to Customer's Library:</h3>
  <form id='addLibrary' action='/library' method='post'>
      Customer: <br><select name="customer" id="customer-selector"> 
        {{#each Customers}}
        <option value="{{id}}">{{id}} {{firstName}} {{lastName}}</option>
        {{/each}}
        </select><br>
      Game: <br><select name="game" id="game-selector"> 
        {{#each Games}}
        <option value="{{id}}">{{id}} {{gameName}}</option>
        {{/each}}
        </select><br>
      <input type='submit' value="Add Game to Customer's Library">
  </form>
  <script defer>selectCustomer({{Customers.custId}});</script>
  <script defer>selectGame({{Game.gameId}});</script>
</html>