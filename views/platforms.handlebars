<table>
    <thead>
        <th>Platform Id</th>
        <th>Platform Name</th>
    </thead>
    <tbody>
        {{#each Platforms}}
        <tr>
            <td>{{platformId}}</td>
            <td>{{platformName}}</td>            
        </tr>
        {{/each}}
    </tbody>
</table>


<h1>Insert platform</h1>
<form id='addPlatform' action='/platforms' method='post'>
    Platform Name: <input type='text' name='platformName'>
    <input type='submit' value='Submit'>
</form>